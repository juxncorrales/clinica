<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.clinica.controladores.ListaPacientesControlador">


    <Label fx:id="txtListado" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="605.0" text="LISTADO PACIENTES" textFill="#0f0f0f">
        <font>
            <Font size="20.0" />
        </font>
      <VBox.margin>
         <Insets left="10.0" top="10.0" />
      </VBox.margin>
    </Label>


    <TableView fx:id="tablaPacientes" prefHeight="400.0" prefWidth="613.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdentificacion" text="Identificación" />
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colTelefono" text="Teléfono" />
            <TableColumn fx:id="colCorreo" text="Correo" />
            <TableColumn fx:id="colSuscripcion" text="Suscripción" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </VBox.margin>
    </TableView>


</VBox>
